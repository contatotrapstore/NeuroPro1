# Backend Environment Variables - NeuroIA Lab
# COPY THIS FILE TO .env AND FILL WITH YOUR ACTUAL VALUES

# Application Environment (REQUIRED)
NODE_ENV=development
PORT=3000

# Database - Supabase Configuration (REQUIRED)
SUPABASE_URL=your-supabase-url
SUPABASE_SERVICE_KEY=your-supabase-service-key
SUPABASE_ANON_KEY=your-supabase-anon-key

# AI Service - OpenAI Configuration (REQUIRED)
OPENAI_API_KEY=your-openai-api-key
# OPENAI_ORGANIZATION=org-your-organization-id  # Optional

# Payment Gateway - Asaas Configuration (REQUIRED)
ASAAS_API_KEY=your-asaas-api-key
ASAAS_WEBHOOK_SECRET=your-asaas-webhook-secret

# Security & CORS (REQUIRED)
CORS_ORIGIN=http://localhost:5173
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters

# Cache (OPTIONAL)
# REDIS_URL=redis://localhost:6379

# Development Settings
DEBUG=false