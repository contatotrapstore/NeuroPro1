# Environment Configuration - NeuroIA Lab Backend
# Copy this file to .env and fill in your actual values

# Application Environment (REQUIRED)
NODE_ENV=development
PORT=3007

# Database - Supabase Configuration (REQUIRED)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-supabase-service-key

# AI Service - OpenAI Configuration (REQUIRED)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_ORGANIZATION=org-your-openai-organization-id

# Payment Gateway - Asaas Configuration (REQUIRED)
ASAAS_API_KEY=your-asaas-api-key
ASAAS_WEBHOOK_SECRET=your-asaas-webhook-secret

# Security & CORS (OPTIONAL - has defaults)
CORS_ORIGIN=http://localhost:5173
JWT_SECRET=your-jwt-secret-key

# For Vercel Production Deployment:
# NODE_ENV=production
# PORT=3000 (Vercel handles this automatically)
# CORS_ORIGIN=https://your-frontend-domain.vercel.app

# Cache (OPTIONAL)
REDIS_URL=redis://localhost:6379

# Development Settings (OPTIONAL)
DEBUG=false